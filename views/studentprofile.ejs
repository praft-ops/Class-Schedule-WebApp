    <!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, inital-scale=1">
        <title>Student Course View</title>
    <!-- Bootstrap CSS link -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  
        <link href="style.css" rel="stylesheet" type="text/css" />
        </head>
        <body>

            <div class="container-xl bg-waring" id="teacherHeader">
                <div class="row align-items-start">
                    <div class="col-8"> <!-- Collumn One -->
                        <h3>Student: <span id="username">Username</span></h3>
                    </div>
                    <div class="col-2"> <!-- Collum Two -->
                    </div>
                    <div class="col-2 p-2"> <!-- Collum Three -->
                        <input type="button" id="profileView" value="profile">
                        <input type="button" id="logout" value="logout">
                    </div>
                </div>
            `</div>
                <!-- Course List-->
            <div class="container-xxl bg-waring" id="courseList">
                <div class="row g-1">
                    <div class="col-10">
                        <h2>Enrolled Course's</h2>
                    </div>

                <div class="row">
                    <div class="col-sm">
                        <input type="button" name="dropButton" id="dropButton" value="Drop Course">
                    </div>
                    <div class="col-sm">
                        <label for="courseNumber">Course Number:</label>
                    </div>
                    <div class="col-sm">
                        <input type="text" id="courseNum" name="courseNum" value="Number" readonly>
                    </div>
                    <div class="col-sm">
                        <label for="courseName">Course Name:</label>
                    </div>
                    <div class="col-sm">
                        <input type="text" id="courseName" name="courseName" value="Name" readonly>
                    </div>
                    <div class="col-sm">
                        <label for="teacher">Teacher:</label>
                    </div>
                    <div class="col-sm">
                        <input type="text" id="teacher" name="courseTeacher" value="Teacher" readonly>
                    </div>
                </div>
               <!--End Course List-->
            </div>
            <script>
            function displayName() {
                let userNameField = document.getElementById("username");
                let url = window.location.href;
                let urlArray = url.split("/");
                let userFirstName = urlArray[6];
                userNameField.textContent = userFirstName;
                }

                window.addEventListener("load", displayName);
            </script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
        </body>
</html>
</html>